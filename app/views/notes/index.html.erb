<div class="row-fluid">
<div class="span10 offset1">	
	<div class="topbackground">		
	</div>
</div>	
</div>	


<div class="row-fluid">
	<div class="span10 offset1">
		<div class="main">	
			<div class="span6 offset3">
			<div class="pagetitle">
			ihasbookmarks.com
			</div>
			</div>

	
			<div class="row-fluid">
			<%= render "form" %>	
			</div>		
			

<% current_user.notes.reverse.first(5).each do |note| %>					
<div class="fullwrapper">			
			<div class="row-fluid">							
			<div class="span3">	
				
				<center>
				<div class="imagewrapper">													
<%= link_to image_tag("http://immediatenet.com/t/l?Size=1024x768&URL=#{note.link}"), "#{note.link}" %>
				</div>
				</center>
							
			</div> 
		

			<div class="span9">
				<div class="titleandcomment">
				
				<div class="titlewrapper">
					
					<%= link_to note, :method => :delete do %>
				  	<i class="icon-remove"></i>
					<% end %>
					
				<div class="title">
<%= best_in_place note, :title, :nil => "Click here to edit title", :html_attrs => {:class => 'titleattributes'} %> 
				</div>
				
				</div>
				
				<div class="comment">	
	
<div class="commentfont">
<%= best_in_place note, :comment, :type => :textarea, :html_attrs => {:class => 'commentbestinplace'}, :display_with => :simple_format %>
</div>

	
<div class="commentbar">
		
	<div class="timeago">
	<%= note.created_at.strftime("%a %b %e %Y") %>						
	</div>
	
</div>	
				</div>
				
				
		
			</div>

		</div>			
	</div>
</div>	

<% end %>	
		
		</div>	
	</div>		
</div>	


			