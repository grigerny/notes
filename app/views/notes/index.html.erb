<div class="row-fluid">
	
	<div class="span7 offset1">
		<div class="main">	
		
			<div class="row-fluid">
			<%= render "form" %>	
			</div>
			
			<div class="row-fluid">
			<div class="span12">	
				
			<div class="span4 offset3">
			<div class="searchwrapper">	
			<%= render '/shared/searchform' %>
			</div>
			</div>
				
			</div>	
			</div>

<div class="noterender">	
<% @notes.each do |note| %>				
<%= render "note", :note => note %>
<% end %>
</div>

<div class="span12">
	<div class="pagination">
		<div class="page">
	    <%= will_paginate @notes, :container => false, :page_links => false %>
		</div>
	</div>
</div>
		
		</div>	
	</div>
	
	<div class="span4">
		<div class="sidebarwrapper">
				<%= form_for(@user_notes.last) do |f| %>
				  <% if @user_notes.last.errors.any? %>
				    <div id="note_explanation">
				      <h2><%= pluralize(@user_notes.last.errors.count, "error") %> prohibited this event from being saved:</h2>

				      <ul>
				      <% @user_notes.last.errors.full_messages.each do |msg| %>
				        <li><%= msg %></li>
				      <% end %>
				      </ul>
				    </div>
				  <% end %>
				
					<div class="sidebarheadline">
						<img src="http://g.etfv.co/<%= "#{@user_notes.last.link}" %>" alt="Google" width="20" height="20" />  &nbsp <%= link_to truncate("#{@user_notes.last.link.sub(/^https?\:\/\//, '').sub(/^www./,'')}", :length => 17, :separator => ' '), @user_notes.last.link, class: 'sidebarheadlinelink' %> 
					</div>

				<%= f.text_area :comment, :class => "sidebartext", :placeholder => "Add a note.."  %> 

				<%= f.submit "Save Note", :class => "sidebarsubmit" %>
				<% end %>
		</div>
	</div>		
</div>	



			