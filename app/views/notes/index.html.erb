<%= js add_gritter(flash[:notice], :image => :notice, :title => "Pow!", :time => 4000) %>
<%= js extend_gritter(flash[:notice], :position => :bottom_left ) %>

<%= render '/shared/websitename' %>
	
<%= link_to quickview_path, "quickview" %>	

<div class="row-fluid">
	
	<div class="span3">
		<div class="main">
			<div class="row-fluid">
				<div class="left-side-title">
					The Tag Bar
				</div>
				
				<% current_user.notes.tag_counts.sort { |x, y| x.name <=> y.name }.each do |tag| %>
				<%= tag %> 
				<% current_user.notes.each do |note|%>
				<% if %>
				<% note.tag_list.to_s == tag.name.to_s %>
				<br>
				<%= link_to truncate_link(note), note.link %>
				<% end %>
				<% end %><br><br>
				<% end %>

	
			</div>
		</div>
	</div>	
	
	<div class="span6">
		<div class="main">	
		
			<div class="row-fluid">
			<%= render "form" %>	
			</div>
			
			<div class="row-fluid">
			<div class="span12">	
				
			<div class="span4 offset3">
			<div class="searchwrapper">	
			<%= render '/shared/searchform' %>
			</div>
			</div>
				
			</div>	
			</div>

<div class="noterender">	
<% @notes.each do |note| %>				
<%= render "note", :note => note %>
<% end %>
</div>

<div class="span12">
	<div class="pagination">
		<div class="page">
	    <%= will_paginate @notes, :container => false, :page_links => false %>
		</div>
	</div>
</div>
		
		</div>	
	</div>
	
<div class="span2">

<div class="sideformwrapper">
<%= render "sideform" %>
</div>	

</div>	
	
</div>				