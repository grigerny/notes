<%= js extend_gritter(flash[:notice], :position => :bottom_left ) %>



<!-- Start of index page  -->
<div class="row-fluid">	
	<div class="span12">
		<div class="main">
				<br>

			<!-- Start of search bar -->
					<div class="row-fluid">
						
						<div class="span5">
							<div class="logo">
								<%= image_tag("Bookmark.gif")%>
							</div>
								<div class="row-fluid">   
									<div class="login-wrapper">
										<div class="login">
											<%= render 'login' %>
										</div>
									</div> 
						   		</div> 	   
						</div>
									<!-- Start of form to add a website	-->
								
								
									<!-- End of form to add a website -->
									
								<div class="span3">
								<div class="searchwrapper">	
								<%= render '/shared/searchform' %>
								</div>
								</div>
								<div class="span3">
								<div class="add-site-form">
								<%= render "form" %>	
								</div>
								</div>
					</div>
			<!-- End of search bar -->
				<div class="notes-pagination-wrapper">	
					
					<!-- Starts note  -->
					<br><br><br>
					<div class="row-fluid">			
							<div class="span12">
								<div class="noterender">
									<% @notes.each do |note| %>				
									<%= render "note", :note => note %>
									<% end %>
								</div>
							</div>
					</div>
					<!-- End note -->
					
					<!-- Start of pagination -->
					<div class="row-fluid">
					<div class="span12">
						<div class="pagination">
							<div class="page">
	    					<%= will_paginate @notes, :container => false, :page_links => false %>
							</div>
						</div>
					</div>
					</div>
					<!-- End of pagination -->
					
					</div>
					
					<!-- Start of tagform -->
					
								<div class="row-fluid">
								<div class="span12">
									<div class="tagformwrapper-index">
									</div>
								</div>
								</div>
								
					<!-- End of tagform -->
				
	
					<!-- Start of taglist -->
						
								<div class="row-fluid">
									<div class="span12">	
										<div class="tagindex">
											 <div class="tagcollapse">
											<%= render "shared/taglist" %>
										</div>
									</div>
								</div>
						</div>	
						
						<!-- End of taglist -->
						
					
					
					
		
		</div>				
	</div>
</div>	
<!-- End of index page 	 -->