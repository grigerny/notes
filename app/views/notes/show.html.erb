<p id="notice"><%= notice %></p>

<div class="row-fluid">
	<div class="span3">
		<div class="mainshow">
					<% unless @note.link.match (/https:/) %>	
					<div class="imagewrappershow">														
	<%= link_to image_tag("http://immediatenet.com/t/l?Size=1024x768&URL=#{@note.link}"), "#{@note.link}" %>
					</div>
					<% else %>
					<div class="imagewrappershow">	
	<%= link_to image_tag("http://placehold.it/200x150/232C3B/&text=#{@note.link}"), "#{@note.link}" %>
					</div>
					<% end %>
				
				<script>
				$(".imagewrappershow").attr('title', 'Click to visit this website');	
				</script>
		</div>
	</div>
		
	<div class="span8">
		<div class="showside">

				   <div class="row-fluid">
					<div id="jobpostbutton" class="jquerybutton">Job Post</div>  	
			
					<div id="craigslistbutton" class="jquerybutton">Real Estate Post</div>
					
					<div id="otherbutton" class="jquerybutton">Other</div>
					</div>
	
				
				    <div class='clearfix' id='job'> 
				    Job
				    </div>
				
				   <div class='clearfix' id='craigslist'>
				   Craigslist
				   </div>
				
				   <div class='clearfix' id='other'>
				   Other
				   </div>
				
				
				<script>
				$(function(){
				                $(document).ready(function () {
				                    $(".jquerybutton").click(function(){
				                        $(".clearfix").hide();
				                    });

				                    $('#job').hide();
				                    $('#jobpostbutton').click(function () {
				                            $('#job').toggle('slow');
				                            return false;
				                    });
				                    $('#craigslist').hide();
				                    $('#craigslistbutton').click(function () {
				                            $('#craigslist').toggle('slow');
				                            return false;
				                    });
									 $('#other').hide();
					                    $('#otherbutton').click(function () {
					                            $('#other').toggle('slow');
					                            return false;
					                    });
				                });

				        });
				</script>	
				
	
		</div>
	<div>
		
</div>		
