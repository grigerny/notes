<%= js extend_gritter(flash[:notice], :position => :bottom_left ) %>

<%= link_to quickview_path, "quickview" %>

<div class="row-fluid">
	
	<div class="span7 offset1">
		<div class="main">	
	
			<div class="row-fluid">
			<%= render "form" %>	
			</div>		
			

<% current_user.notes.reverse.first(5).each do |note| %>
					
<div class="fullwrapper">			
			<div class="row-fluid">							
			<div class="span3">	
				
				
				<center>
				<% unless note.link.match (/https:/) %>	
				<div class="imagewrapper">														
<%= link_to image_tag("http://immediatenet.com/t/l?Size=1024x768&URL=#{note.link}"), "#{note.link}" %>
				</div>
				<% else %>
				<div class="imagewrapper">	
<%= link_to image_tag("http://placehold.it/200x150/232C3B/&text=#{note.link}"), "#{note.link}" %>
				</div>
				<% end %>
				</center>
				
						<script>
						$(".imagewrapper").attr('title', 'Click to visit this website');	
						</script>	
			</div> 
		

			<div class="span9">
				
				<div class="titleandcomment">
				
				
				<div class="titlewrapper">		
					
				<div class="title">
					<img src="http://g.etfv.co/<%= "#{note.link}" %>" alt="Google" width="20" height="20" />  &nbsp 
			<%= truncate("#{note.link.sub(/^https?\:\/\//, '').sub(/^www./,'')}", :length => 17, :separator => ' ') %> 
						
			
<%= link_to note_path(note), :class => "detailslink" do %>
<i class="icon-align-justify"></i> Add a note	
<% end %>
				
				</div>
				
				</div>
					
				<div class="comment">
					
<div class="row-fluid">
	<div class="websitedetails">
<div class="span12">
	<div class="span12">
	Added on <%= note.created_at.strftime('%b %d, %Y') %> 
	<br><br>
	
	<div class="icon-removewrapper">	
	<%= link_to note, :method => :delete do %>
	<i class="icon-remove"></i>
	<% end %>
	</div>

