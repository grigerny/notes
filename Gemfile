gem "less-rails"
gem "therubyracer", :require => 'v8'
gem 'libv8', '~> 3.11.8'
gem "best_in_place"
gem 'devise'
gem "rails-bookmarklet", :git => "https://github.com/oliverfriedmann/rails-bookmarklet.git"
gem 'mechanize'
gem "gritter", "1.0.2"
gem "ransack" 


